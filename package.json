{
	"name": "light-switch",
	"displayName": "Light Switch",
	"description": "Light Switch allows you to set two themes that swap around day & night. All you have to do is pick your themes and set your preferred times.",
	"version": "0.0.1",
	"author": {
		"name": "Juan Alejandro Morais",
		"email": "timrodz@icloud.com",
		"url": "http://timrodz.com"
	},
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Ligth Switch",
		"Theme Switch"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"category": "Light Switch",
				"command": "extension.switch",
				"title": "Switch The Lights"
			},
			{
				"category": "Light Switch",
				"command": "extension.setModeDark",
				"title": "Activate Dark Mode"
			},
			{
				"category": "Light Switch",
				"command": "extension.setModeLight",
				"title": "Activate Light Mode"
			},
			{
				"category": "Light Switch",
				"command": "extension.setTimeModeLight",
				"title": "Set Time: Dark Mode"
			},
			{
				"category": "Light Switch",
				"command": "extension.setTimeModeDark",
				"title": "Set Time: Light Mode"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
